<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ReminderTextField">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="ReminderSwitch" >
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#212121</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gama_adjusted_grey</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>